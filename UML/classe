@startuml
skinparam classAttributeIconSize 0 


class JeuBatailleNavale{
   +oueur joueur1
   +Joueur joueur2
   +int nbJoueursHumains

   +JeuBatailleNavale()
   +void initialiserNomJoueur()
   +void nouveauJeu()
   +bool checkFinJeu()

}

class Grille{
   -char** grille
   -{static} int tailleHorizontal
   -{static} int tailleVertical

   +Grille()
   +~Grille()
   +void initialiserGrille()
   +void afficher()
   +void reset()

}

class Joueur {
   +friend JeuBatailleNavale
   -String nom
   -bool isIA
   -Grille grille
   -int nbBateauxTouches

  +Joueur()
  +void initialiserNom()
  +void initialiserGrille()
  +void tour()


}

class Bateau{
   -int taille
   -int xExtremite
   -int yExtremite
   -bool orientation

   +Bateau()

}
@enduml
